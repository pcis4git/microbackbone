{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/src/index.ts", // Entry point of your application
        "preLaunchTask": "tsc: build - tsconfig.json", // Ensure TypeScript builds before launching
        "outFiles": ["${workspaceFolder}/dist/**/*.js"] // Output directory
      }
    ]
  }